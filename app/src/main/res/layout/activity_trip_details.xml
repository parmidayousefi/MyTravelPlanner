<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="rtl"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout android:id="@+id/map_container" android:layout_width="match_parent" android:layout_height="200dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="عکس‌ها/ویدیوها" android:padding="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMedia"
        android:layout_width="match_parent" android:layout_height="100dp" android:padding="8dp" android:overScrollMode="never"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="لیست کارها" android:padding="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTodos"
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:padding="8dp"/>
</LinearLayout>
